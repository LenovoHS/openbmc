[Unit]
Description=Lenovo power status monitor
Requires=host-gpio.service
After=host-gpio.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/usr/bin/env pwr-monitor.sh
SyslogIdentifier=pwr-monitor.sh

[Install]
WantedBy={SYSTEMD_DEFAULT_TARGET}
